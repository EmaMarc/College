programa ParcialBarrera
procesos
  proceso InformarPapeles
  variables
    cant:numero
  comenzar
    Pos(80,80)
    cant:=0
    mientras(HayPapelEnLaEsquina)
      tomarPapel
      cant:=cant+1
    Informar(cant)
  fin
  proceso depositar80
  variables
    avog:numero
  comenzar
    avog:=PosAv
    BloquearEsquina(80,80)
    Pos(80,80)
    mientras(HayPapelEnLaBolsa)
      depositarPapel
    Pos(avog,100)
    LiberarEsquina(80,80)    
  fin
  proceso esperar(E id:numero;E aux:numero)
  comenzar
    si(id=1)
      EnviarMensaje(1,r2)
      EnviarMensaje(1,r3)
    sino
      si(id=2)
        EnviarMensaje(1,r1)
        EnviarMensaje(1,r3)
      sino
        EnviarMensaje(1,r1)
        EnviarMensaje(1,r2)
    RecibirMensaje(aux,*)
    RecibirMensaje(aux,*)  
  fin
  proceso juntarydejar
  comenzar
    si(HayPapelEnLaEsquina)
      tomarPapel
    si(HayFlorEnLaBolsa)
      depositarFlor
  fin
areas
  fiscalia:AreaP(4,1,4,1)
  av1:AreaP(1,1,1,100)
  av2:AreaP(2,1,2,100)
  av3:AreaP(3,1,3,100)
  deposito:AreaC(80,80,80,80)
robots
  robot recolector
  variables
    id:numero
    esq:numero
    aux:numero
  comenzar
    RecibirMensaje(id,fiscal)
    mientras(PosCa<100)
      esq:=0
      mientras((esq<=10)&(PosCa<100))
        juntarydejar
        mover
        esq:=esq+1
      esperar(id,aux)      
    depositar80
    EnviarMensaje(1,fiscal)
  fin
  robot fiscalizador
  variables
    termino:numero
  comenzar
    EnviarMensaje(1,r1)
    EnviarMensaje(2,r2)
    EnviarMensaje(3,r3)
    RecibirMensaje(termino,*)
    RecibirMensaje(termino,*)
    RecibirMensaje(termino,*)
    InformarPapeles
  fin
variables
  r1:recolector
  r2:recolector
  r3:recolector
  fiscal:fiscalizador
comenzar
  AsignarArea(fiscal,fiscalia)
  AsignarArea(fiscal,deposito)
  AsignarArea(r1,av1)
  AsignarArea(r1,deposito)
  AsignarArea(r2,av2)
  AsignarArea(r2,deposito)
  AsignarArea(r3,av3)
  AsignarArea(r3,deposito)
  Iniciar(fiscal,4,1)
  Iniciar(r1,1,1)
  Iniciar(r2,2,1)
  Iniciar(r3,3,1)
fin